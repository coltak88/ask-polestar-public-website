# Public Website Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8501

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ask_polestar_public
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ask_polestar_public
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Configuration
API_BASE_URL=http://localhost:8000
INFLUENCE_API_URL=http://localhost:8000
AI_API_URL=http://localhost:8001

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Social Media Integration
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@askpolestar.com

# File Storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CSRF_SECRET_KEY=your-csrf-secret-key
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# Monitoring
PROMETHEUS_METRICS_PATH=/metrics
ENABLE_METRICS=true
SENTRY_DSN=your-sentry-dsn-url

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id
HOTJAR_ID=your-hotjar-id

# CDN and Assets
CDN_URL=https://cdn.example.com
STATIC_URL=/static

# Cache Settings
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Session Configuration
SESSION_TYPE=redis
SESSION_PERMANENT=false
SESSION_USE_SIGNER=true
SESSION_KEY_PREFIX=ask_polestar_session_

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_A_B_TESTING=false

# Development Settings
RELOAD_ON_CHANGE=true
SHOW_ERROR_DETAILS=true